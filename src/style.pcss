}

.fluent-person-delete-20-filled{
	@iconUrl fluent person-delete-20-filled;
}

.ph-user-plus-fill{
	@iconUrl ph user-plus-fill;
}

.eva-arrow-ios-forward-fill{
	@iconUrl eva arrow-ios-forward-fill;
}

.la-long-arrow-alt-left{
	@iconUrl fa arrow-left;
}
