<div class="container">
    <div class="chat"> 
        <div class="chat_left-column">

            <div class="chat_left-column_header">
                <div class="chat_left-column_header-profile">
                    <a onclick="goToPage('profile')">
                        Профиль
                        <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M1 9L5 5L1 1" stroke="#999999"/>
                        </svg>
                    </a>
                </div>
                <div class="mx-2"></div>
                <div class="chat_left-column_header-search">
                    <input type="text" name="search" class="chat_left-column_header-search_input input" placeholder="Поиск">
                </div>
            </div>

            <div class="mx-2"></div>

            <div class="chat_left-column_items">

                {{#each Chats}}
                    {{{this}}}
                {{/each}}

            </div>
        </div>

        <!-- Подгрузка сообщений происходит в файле index.js -->
        <div class="chat_right-column chat-block">
            
            {{{ Chat }}} 

        </div>

    </div>
</div>
