<div class="change-password">
    <form action="" onsubmit="showEditBlocks('profile')">
        <ul>
            <li>
                <div class="profile_right_info_data_field-name">
                    Старый пароль
                </div>
                <div class="profile_right_info_data_field-value">
                    {{> Field 
                        type="password"
                        inputClassName="old-password"
                        inputName="oldPassword"
                        value="*******"
                    }}
                </div> 
            </li>
            <li>
                <div class="profile_right_info_data_field-name">
                    Новый пароль
                </div>
                <div class="profile_right_info_data_field-value">
                    {{> Field 
                        type="password"
                        inputClassName="old-password"
                        inputName="newPassword"
                        value="*******"
                    }}
                </div> 
            </li>
            <li>
                <div class="profile_right_info_data_field-name">
                    Повторите новый пароль
                </div>
                <div class="profile_right_info_data_field-value">
                    {{> Field 
                        type="password"
                        inputClassName="re-password"
                        inputName="rePassword"
                        value="*******"
                    }}
                </div> 
            </li>
        </ul>

        <div class="profile_right_info_data_save-button mt-8">
            <div class="profile_right_info_data_save-button_center">
                {{>Button title="Сохранить"}}
            </div>
        </div>
    </form>
</div>
