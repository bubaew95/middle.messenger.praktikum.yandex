.error-page {
    display:flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 100vh;
    text-align: center;

    &_content {
        &_error-number {
            & h1 {
                font-size: 160px;
                margin: 0;
                padding: 0;
            }
        }

        &_text {
            & p {
                font-size: 36px;
                margin: 0;
                padding: 0;
            }
        }
    }
}